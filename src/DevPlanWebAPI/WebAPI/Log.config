<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <log4net>

    <!--通常ログのファイル定義-->
    <appender name="AllLogDailyAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value=".\App_Data\Logs\" />

      <param name="DatePattern" value='yyyy-MM-dd"/AllDailyLog_"yyyyMMdd".log"' />
      <param name="RollingStyle" value="date" />
      <param name="StaticLogFileName" value="false" />

      <AppendToFile value="true" />

      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="TRACE" />
        <param name="LevelMax" value="FATAL" />
      </filter>

      <param name="MaximumFileSize" value="500MB" />
      <param name="MaxSizeRollBackups" value="30" />

      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <layout type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%date [%thread] [%-5level] %logger - %message%n" />
      </layout>
    </appender>

    <!--エラーログ：出力ファイル定義-->
    <appender name="ErrorLogDailyAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value=".\App_Data\Logs\" />
      <param name="DatePattern" value='yyyy-MM-dd"/ErrorLog_"yyyyMMdd".log"' />
      <param name="RollingStyle" value="date" />
      <param name="StaticLogFileName" value="false" />

      <param name="AppendToFile" value="true" />

      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="FATAL" />
      </filter>

      <param name="MaximumFileSize" value="500MB" />
      <param name="MaxSizeRollBackups" value="30" />

      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <layout type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%date [%thread] [%-5level] %logger %file(%line) %class %method - %message%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="AllLogDailyAppender" />
      <appender-ref ref="ErrorLogDailyAppender" />
    </root>

  </log4net>
</configuration>
